<style>
  #chartContainer {
    width:300px;
    height:250px
  }
</style>
<div id="chartContainer">
  <canvas id="chart" width="20" height="20">
</div>


<script>
  $(document).ready(function() {
    var ctx = document.getElementById("chart");    
    var keywords = <%= @response['keywords'].to_json.html_safe %>;
    var relevance = <%= @response['relevance'].to_json.html_safe %>;

    var myChart = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: keywords,
        datasets: [{
          label: '# of Votes',
          data: relevance,
          backgroundColor: [
              'rgba(255, 99, 132, 0.2)',
              'rgba(54, 162, 235, 0.2)',
              'rgba(255, 206, 86, 0.2)',
              'rgba(75, 192, 192, 0.2)',
              'rgba(153, 102, 255, 0.2)',
              'rgba(255, 159, 64, 0.2)'
          ],
          borderColor: [
              'rgba(255,99,132,1)',
              'rgba(54, 162, 235, 1)',
              'rgba(255, 206, 86, 1)',
              'rgba(75, 192, 192, 1)',
              'rgba(153, 102, 255, 1)',
              'rgba(255, 159, 64, 1)'
          ],
          borderWidth: 1
        }]
      },
      options: {
        scales: {
          yAxes: [{
            ticks: {
              beginAtZero:true
            }
          }]
        }
      }
    });
  });
</script>

